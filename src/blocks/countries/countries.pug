//- Все примеси в этом файле должны начинаться c имени блока (countries)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin countries(data, mods)

  //- Принимает:
  //-   data    {object} - список модификаторов
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +countries(object, "some-mod")

  //- список модификаторов
  -
    var allMods = "";
    if (typeof (mods) !== "undefined" && mods) {
      var modsList = mods.split(",");
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + " countries--" + modsList[i].trim();
      }
    }

  .countries(class=allMods)&attributes(attributes)
    each item in data
      a.countries__item(href="#")
        .countries__icon
          svg
            use(href= path.icon + "icon__flag--" + item.icon)
        .countries__title!= item.title
        if item.description
          .countries__descr!= item.description
        else
          .countries__descr от 20 000 ₽
