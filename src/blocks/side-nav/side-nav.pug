//- Все примеси в этом файле должны начинаться c имени блока (side-nav)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin side-nav(mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +side-nav("some-mod")

  //- список модификаторов
  -
    var allMods = "";
    if (typeof (mods) !== "undefined" && mods) {
      var modsList = mods.split(",");
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + " side-nav--" + modsList[i].trim();
      }
    }

  .side-nav(class=allMods)&attributes(attributes)
    .side-nav__close(data-burger)
      svg.side-nav__icon
        use(href= path.icon + "icon__close")

    .side-nav__inner
      .side-nav__links
        each section in json.sideNav
          .side-nav__section
            .side-nav__title!= section.title
            .side-nav__row
              each link in section.list
                a.side-nav__link(href= link.href)!= link.title
      .side-nav__call
        a.side-nav__phone(href="tel:88004444140") 8 (800) 444-41-40
        button.side-nav__callback(data-modal="#callback") обратный звонок
      .side-nav__socials
        a.side-nav__social(href="https://t.me/allvisa_client?roistat_visit=489845&start=roistat_489845", target="_blank")
          svg.side-nav__icon
            use(href= path.icon + "icon__social--tg")
        a.side-nav__social(href="https://vk.com/allvisacentre?roistat_visit=489845", target="_blank")
          svg.side-nav__icon
            use(href= path.icon + "icon__social--vk")
        a.side-nav__social(href="https://api.whatsapp.com/send?phone=79296761959&text=%D0%97%D0%B4%D1%80%D0%B0%D0%B2%D1%81%D1%82%D0%B2%D1%83%D0%B9%D1%82%D0%B5!%20%D0%BD%D0%BE%D0%BC%D0%B5%D1%80%20%D0%BC%D0%BE%D0%B5%D0%B3%D0%BE%20%D0%B7%D0%B0%D0%BA%D0%B0%D0%B7%D0%B0%20489845", target="_blank")
          svg.side-nav__icon
            use(href= path.icon + "icon__social--wa")
