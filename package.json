{
  "name": "project-builder",
  "version": "2.0.0",
  "description": "Start kit for HTML(PUG)/CSS(SCSS)/JS pages layout",
  "author": "Alexander Motorygin (https://github.com/motosasha)",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motosasha/project-builder-v2"
  },
  "type": "module",
  "node version": "18+",
  "scripts": {
    "test": "npm run test:ec && npm run test:pug && npm run test:style && npm run test:js",
    "test:ec": "editorconfig-cli 'src/**/*.{md,pug,js}'",
    "test:pug": "glob-exec 'src/**/*.pug' -- 'pug-lint {{files.join(\" \")}}'",
    "test:style": "stylelint 'src/**/*.scss'",
    "test:js": "eslint src/**/*.js",
    "fix:style": "stylelint 'src/**/*.scss' --fix",
    "fix:js": "eslint src/**/*.js --fix",
    "prettier:js": "prettier --check 'src/**/*.js'",
    "prettier-fix:js": "prettier --write 'src/**/*.js'",
    "start": "gulp",
    "build": "cross-env MODE=production gulp build",
    "clear": "gulp dev:clear",
    "deploy": "cross-env MODE=deploy gulp deploy",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.1",
    "@babel/plugin-transform-runtime": "^7.25.4",
    "@babel/preset-env": "^7.25.4",
    "@eslint/js": "^9.9.1",
    "@htmlacademy/editorconfig-cli": "^3.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/stream": "^3.0.1",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^3.0.2",
    "chalk": "^5.3.0",
    "cpy": "^11.1.0",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.5",
    "del": "^7.1.0",
    "eslint": "^9.9.1",
    "eslint-plugin-prettier": "^5.2.1",
    "gh-pages": "^6.1.1",
    "glob-exec": "^0.1.1",
    "globals": "^15.9.0",
    "gulp": "^5.0.0",
    "gulp-cheerio": "^1.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-debug": "^5.0.1",
    "gulp-json-concat": "^0.2.0",
    "gulp-minifier": "^3.5.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-pretty-html": "^2.0.10",
    "gulp-pug": "^5.0.0",
    "gulp-pug-linter": "^1.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-svgo": "^2.2.1",
    "gulp-svgstore": "^9.0.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "mkdirp": "^3.0.1",
    "postcss": "^8.4.41",
    "postcss-import": "^16.1.0",
    "postcss-pxtorem": "^6.1.0",
    "postcss-remove-duplicate-values": "^1.0.0",
    "postcss-replace": "^2.0.1",
    "postcss-scss": "^4.0.9",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.3.3",
    "pug-lint": "^2.7.0",
    "puglint-stylish": "^1.1.0",
    "sass": "^1.77.8",
    "stylelint": "^16.8.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.5.0",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "through2": "^4.0.2",
    "vinyl-source-stream": "^2.0.0"
  },
  "dependencies": {
    "autosize": "^6.0.1",
    "imask": "^7.6.1",
    "intl-tel-input": "^24.6.0",
    "just-validate": "^4.3.0",
    "sanitize.css": "^13.0.0",
    "slim-select": "^2.9.2",
    "tua-body-scroll-lock": "^1.4.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie > 0",
    "not ie_mob > 0",
    "not dead"
  ],
  "lint-staged": {
    "src/**/*.{md,pug,js}": "editorconfig-cli",
    "src/**/*.pug": "pug-lint",
    "src/**/*.scss": "stylelint --allow-empty-input --custom-syntax postcss-scss",
    "src/**/*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "volta": {
    "node": "20.11.0"
  }
}
